set tabstop=4           "tab is 4 spaces long
set softtabstop=4       "how many spaces inserted when editing
set shiftwidth=4        "how far an indent (>>) moves text 
set expandtab           "tabs are converted into spaces
set number              "show line number
"set cursorline          "highlight current line
set showmatch           "highlight corresponding ([{
set incsearch           "search while search term is being entered
set hlsearch            "highlight search results
set foldenable          "enable folds
set foldmethod=syntax   "folds are determined by the syntax (brackets/blocks)
set foldminlines=8      "minimum number of lines to close a fold"
set splitbelow          "vertical splits open below
set splitright          "horizontal splits open to the right
syntax on
